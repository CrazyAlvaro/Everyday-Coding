extends ../../common/layout

block link
  link(href="/static/font-awesome.css" rel="stylesheet")

block content
  include ../../common/simpleHeader
  include ../../common/message
  .md-content
    .md-form-container
      form(action="/users/login" method="POST")
        .md-user-login-form.md-form
          .md-form-title 登录到#{organizationDomain}.madadata.com
          .md-form-flash-message 请输入您的 账户名 和 密码
          input.md-form-input(name="username" placeholder="用户名" type="text")
          input.md-form-input(name="password" placeholder="密码" type="password")
          button.md-btn-primary.md-form-btn(type="submit") 登录
          .md-form-checkbox
            input(type="checkbox" id="keep-login")
            label(for="keep-login") 保持登录状态
          .md-form-section
            .md-form-link
              a(href="/users/forget-password") 找回密码
            .md-form-link
              a(href="/users/signup") 还没有账号?
