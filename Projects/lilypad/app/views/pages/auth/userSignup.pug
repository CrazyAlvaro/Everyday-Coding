extends ../../common/layout

block link
  link(href="/static/font-awesome.css" rel="stylesheet")

block content
  include ../../common/simpleHeader
  include ../../common/message
  .md-content
    .md-form-container
      form(action="/users/signup" method="POST")
        .md-user-signup-form.md-form
          .md-form-title 注册新用户
          .md-form-flash-message 请输入您的 账户名 和 密码
          input.md-form-input(name="username" placeholder="用户名" type="text")
          input.md-form-input(name="password" placeholder="密码" type="password")
          input.md-form-input(name="confirm" placeholder="请再次输入密码" type="password")
          input.md-form-input(name="email" placeholder="邮箱" type="text")
          input.md-form-input(name="phone" placeholder="手机号码" type="text")
          button.md-btn-primary.md-form-btn(type="submit") 注册
          .md-form-link
            a(href="/users/login") 已经有账号？
